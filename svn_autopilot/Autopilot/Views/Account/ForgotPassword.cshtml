
@model Autopilot.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Recover Pasword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}
<style>
    .content {
        margin-top: 0px;
        margin-left: 0px;
    }
</style>



@using (Html.BeginForm())
{
    
    
    @Html.AntiForgeryToken()
    <!-- Wrapper-->
    <div class="wrapper">

        <!-- Main content-->
        <section class="">

            <div class="container-center animated slideInDown">

                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-unlock"></i>
                    </div>
                    <div class="header-title">
                        <h3>Recover Your Password</h3>
                    </div>
                </div>
                <div class="panel panel-filled">
                    <div class="panel-body">

                        <div class="form-group">
                            <label class="control-label" for="username">Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "example@gmail.com" })
                            <div style="color:red">
                                @Html.ValidationMessageFor(model => model.Email)
                               </div>
                                 @*<input type="text" placeholder="example@gmail.com" title="Please enter you username" required="" value="" name="username" id="username" class="form-control">*@
                                <span class="help-block small">Email Id linked with your account.</span>
                            </div>
                        @*<div class="form-group">
                            <label class="control-label" for="password">Password</label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", placeholder = "******" })
                            @Html.ValidationMessageFor(model => model.Password)
                            <span class="help-block small">Your strong password</span>
                        </div>*@


                        <div class="btn-margin">
                            <button class="btn btn-accent  col-lg-12" type="submit">Email Reset Link</button>
                        </div>

                        
                        @*<div class="form-group ">
                            Don't have an account? <a href="@Url.Action("Register","Account")">Register</a>
                        </div>*@
                        @*<div class="form-group ">
                            Forgot your email?<a href="@Url.Action("Forgot","Account")">Forget Password?</a>
                        </div>*@
                    </div>
                </div>
            </div>
        </section>
        <!-- End main content-->
    </div>

}
@section script
{
    <script>
        $(document).ready(function () {

            if ('@ViewBag.Message' != "") {
                toastr.warning('@ViewBag.Message');

            }
        })
    </script>
}
